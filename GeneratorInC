/*  This is a test to see if generating .ics files in C works */

#include <stdio.h>
#define LEN 256

int main ()
{
FILE *f = fopen("event.ics", "w");
if (f == NULL)
{
    printf("Error opening file!\n");
    exit(1);
}

/* Test some text */
const char *text = "Write this to the file";
fprintf(f, "Some text: %s\n", text);

/* Test integers and floats */
int i = 1;
float pi = 3.1415927;
fprintf(f, "Integer: %d, float: %f\n", i, pi);

/* Testing single chatacters */
char a = 'A';
fprintf(f, "A character: %c\n", a);

fclose(f);
}